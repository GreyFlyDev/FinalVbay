@model IEnumerable<Vbay.Models.Ad>

@{
    ViewBag.Title = "Index";
}
<h2>My Ads</h2>
@using (Html.BeginForm())
{
    <p>
        Search Ads: @Html.TextBox("searchString")
        <input type="submit" value="Search" />
    </p>
}

<h3>My Active Ads</h3>
<table class="table">
    <tr>
        <th>
            @Html.ActionLink("Headline", "Index", new { sortOrder = ViewBag.HeadlinesortParam })
        </th>
        <th>
            @Html.ActionLink("Description", "Index", new { sortOrder = ViewBag.DescriptionsortParam })
        </th>
        <th>
            @Html.ActionLink("Price", "Index", new { sortOrder = ViewBag.PriceSortParam })
        </th>
        <th>
            @Html.ActionLink("Approved", "Index", new { sortOrder = ViewBag.ApprovedSortParam })
        </th>
        <th>
            @Html.ActionLink("Date Posted", "Index", new { sortOrder = ViewBag.DateSortParam })
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    if (item.UserId == ViewBag.UserId && item.Active == true)
    {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ShortHeadline)
                    </td>
                    <td>
                        @Html.Raw(HttpUtility.HtmlDecode(item.ShortDescription))
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Approved)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DatePosted)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
    }
}
</table><br />

<h3>My Expired Ads</h3>
<table class="table">
    <tr>
        <th>
            @Html.ActionLink("Headline", "Index", new { sortOrder = ViewBag.HeadlinesortParam })
        </th>
        <th>
            @Html.ActionLink("Description", "Index", new { sortOrder = ViewBag.DescriptionsortParam })
        </th>
        <th>
            @Html.ActionLink("Price", "Index", new { sortOrder = ViewBag.PriceSortParam })
        </th>
        <th>
            @Html.ActionLink("Approved", "Index", new { sortOrder = ViewBag.ApprovedSortParam })
        </th>
        <th>
            @Html.ActionLink("Date Posted", "Index", new { sortOrder = ViewBag.DateSortParam })
        </th>
        <th></th>
    </tr>
    
    @foreach (var item in Model)
    {
        if (item.UserId == ViewBag.UserId && item.Active == false)
        {
            <tr>
                <td class="alert-danger">
                    @Html.DisplayFor(modelItem => item.ShortHeadline)
                </td>
                <td class="alert-danger">
                    @Html.Raw(HttpUtility.HtmlDecode(item.ShortDescription))
                </td>
                <td class="alert-danger">
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td class="alert-danger">
                    @Html.DisplayFor(modelItem => item.Approved)
                </td>
                <td class="alert-danger">
                    @Html.DisplayFor(modelItem => item.DatePosted)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    }

</table>
